<!DOCTYPE html>
<html lang='en'>
<head>
  <meta charset='UTF-8'>
  <title>Comments</title>
  <link rel='stylesheet' href='styles.css'>
</head>
<body>
  <h2>All Comments</h2>
  <ul class='post'>
      <% console.log(comments.length) %>
      <% for(var i=0; i < comments.length; i++) {%>
  
        <li class='post'>
          <span><%= comments[i].name %></span>
          <span><%= comments[i].email %></span>
          <span><%= comments[i].body %></span><br /><br />
        </li>
      <% } %>
  </ul>
</body>
</html>
